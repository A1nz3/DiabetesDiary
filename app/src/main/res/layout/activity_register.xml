<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#25BDD1AC"
    >

    <TextView
        android:id="@+id/tv_header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Rejestracja w Dzienniku dla diabetyków"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:gravity="center"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tv_username_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nazwa użytkownika:"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_header"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"/>

    <EditText
        android:id="@+id/et_U"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Nazwa użytkownika"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="@+id/tv_username_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_username_label"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/tv_email_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Adres e-mail:"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/tv_username_label"
        app:layout_constraintTop_toBottomOf="@+id/et_U"
        android:layout_marginTop="24dp" />

    <EditText
        android:id="@+id/etRegisterEmail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="E-mail"
        android:inputType="textEmailAddress"
        app:layout_constraintStart_toStartOf="@+id/tv_email_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_email_label"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/tv_password_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hasło:"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/tv_email_label"
        app:layout_constraintTop_toBottomOf="@+id/etRegisterEmail"
        android:layout_marginTop="24dp" />

    <EditText
        android:id="@+id/etRegisterPassword"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Hasło"
        android:inputType="textPassword"
        app:layout_constraintStart_toStartOf="@+id/tv_password_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_password_label"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="8dp" />

    <TextView
        android:id="@+id/tv_password_confirm_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Potwierdź hasło:"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/tv_password_label"
        app:layout_constraintTop_toBottomOf="@+id/etRegisterPassword"
        android:layout_marginTop="24dp" />

    <EditText
        android:id="@+id/etRegisterPassword2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Potwierdź hasło"
        android:inputType="textPassword"
        app:layout_constraintStart_toStartOf="@+id/tv_password_confirm_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_password_confirm_label"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/btn_RegisterRegister"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Zarejestruj się"
        android:backgroundTint="#4CAF50"
        app:layout_constraintStart_toStartOf="@+id/etRegisterPassword2"
        app:layout_constraintEnd_toEndOf="@+id/etRegisterPassword2"
        app:layout_constraintTop_toBottomOf="@+id/etRegisterPassword2"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
